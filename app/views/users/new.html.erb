<h1>New User:</h1>

<%= render 'shared/error_messages' %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div> <br>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div> <br>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div> <br>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div> <br>

  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div> <br>

  <div>
    <%= f.submit "Create an account" %>
  </div>
<% end %>
