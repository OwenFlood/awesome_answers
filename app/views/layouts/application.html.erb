<!DOCTYPE html>
<html>
<head>
  <title>AwesomeAnswers</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Awesome Answers</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li> <%= link_to 'All Questions', questions_path %></li>
            <li> <%= link_to "New Question", new_question_path %></li>

              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><%= current_user.first_name.capitalize %>
              <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li><%= link_to "My Profile", user_path(current_user) %></li>
                <li><a href="#">Edit My Profile</a></li>
              </ul>
            </div>
            </li>
            <li><%= link_to "Log Out", sessions_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign In", new_session_path %></li>
            <li class="active"><%= link_to "Sign Up", new_user_path %><span class="sr-only">(current)</span></li>
          <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>

    </nav>


    <br><br><br>

<div class="container">
  <% if notice || alert %>
  <hr>
  <%= notice || alert %>
  <hr>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
